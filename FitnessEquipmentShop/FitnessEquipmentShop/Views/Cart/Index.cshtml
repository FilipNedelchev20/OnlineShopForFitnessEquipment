@model IEnumerable<FitnessEquipmentShop.Data.Models.Entities.CartItem>

@{
    ViewData["Title"] = "Cart";
}
<div class="mb-3">
    <a href="@Url.Action("Index", "Home")" class="btn btn-light shadow-lg fw-bold">
        ⬅️ Back to Home
    </a>
</div>
<div class="container py-5">
    <h2 class="text-center mb-4 display-4 fw-bold text-primary">Shopping Cart</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center shadow-sm">
            Your cart is empty. Time to explore some fitness gear!
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow border-0">
                        <div class="card-body">
                            <h5 class="card-title">@item.Product.Name</h5>
                            <p class="card-text text-success fs-5 fw-semibold">@item.Product.Price lv.</p>
                        </div>
                        <div class="card-footer bg-white border-0 text-end">
                            <a href="@Url.Action("Remove", "Cart", new { id = item.Id })" class="btn btn-outline-danger">
                                <i class="bi bi-trash"></i> Remove
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="d-flex justify-content-center gap-3">
            <a href="@Url.Action("Create", "Order")" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-cart-plus"></i> Place Order
            </a>
            <a href="@Url.Action("Checkout", "Order")" class="btn btn-success btn-lg shadow-sm">
                <i class="bi bi-credit-card"></i> Checkout
            </a>
        </div>
    }
</div>
