@model IEnumerable<FitnessEquipmentShop.Data.Models.Entities.Review>

@{
    ViewData["Title"] = "Reviews";
}

<h2>Reviews</h2>
@if (!Model.Any())
{
    <p>No available reviews.</p>
}
else
{
    <ul class="list-group">
        @foreach (var review in Model)
        {
            <li class="list-group-item">
                <strong>@review.User.FullName:</strong> <em>@review.Comment</em> (Rating: @review.Rating/5)
            </li>
        }
    </ul>
}

<h3>Add review</h3>
<form method="post" action="@Url.Action("Add", "Review")">
    <input type="hidden" name="ProductId" value="@ViewBag.ProductId" />
    <div class="form-group">
        <label for="comment">Comment:</label>
        <textarea name="Comment" class="form-control" required></textarea>
    </div>
    <div class="form-group">
        <label for="rating">Rating:</label>
        <input type="number" name="Rating" min="1" max="5" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Add</button>
</form>
