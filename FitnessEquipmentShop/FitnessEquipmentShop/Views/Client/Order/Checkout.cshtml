@using FitnessEquipmentShop.Web.ViewModel
@model CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

@if (Model.CartItems.Count == 0)
{
    <p>Your cart is empty. <a href="@Url.Action("Index", "Product")">Continue shopping</a>.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.Product.Name</td>
                    <td>@item.Quantity</td>
                    <td>$@item.Product.Price</td>
                    <td>$@(item.Quantity * item.Product.Price)</td>
                </tr>
            }
        </tbody>
    </table>

    <h4>Total: $@Model.TotalPrice</h4>

    <form asp-action="PlaceOrder" method="post">
        <h3>Shipping Address</h3>
        <div class="mb-3">
            <label for="Address" class="form-label">Street Address</label>
            <input type="text" class="form-control" id="Address" name="Street" value="@Model.Address?.Street" required>
        </div>
        <div class="mb-3">
            <label for="City" class="form-label">City</label>
            <input type="text" class="form-control" id="City" name="City" value="@Model.Address?.City" required>
        </div>

        <button type="submit" class="btn btn-primary">Place Order</button>
    </form>
}
