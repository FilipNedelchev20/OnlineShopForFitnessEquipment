@using FitnessEquipmentShop.Data.Models.Entities
@model IEnumerable<Order>

<div class="mb-3">
    <a href="@Url.Action("Index", "Home")" class="btn btn-light shadow-lg fw-bold">
        ⬅️ Back to Home
    </a>
</div>
<div class="mb-3">
    <a href="@Url.Action("Index", "Profile")" class="btn btn-light shadow-lg fw-bold">
        ⬅️ Back to Profile
    </a>
</div>
<h2>My Orders</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.Status</td>
                <td>
                    <a href="@Url.Action("Details", "Order", new { id = order.Id })">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
