@model FitnessEquipmentShop.Data.Models.Entities.Review

<div class="col">
    <div class="card shadow-sm border-0 h-100 animate__animated animate__fadeInUp">
        <div class="card-body">
            <h5 class="fw-bold">@Model.User?.FullName</h5>
            <p class="mb-2"><em>"@Model.Comment"</em></p>
            <p class="text-warning">Rating: ⭐ @Model.Rating / 5</p>
        </div>
    </div>
</div>
