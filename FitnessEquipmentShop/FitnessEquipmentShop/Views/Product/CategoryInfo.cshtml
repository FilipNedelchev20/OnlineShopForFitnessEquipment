@model FitnessEquipmentShop.Web.ViewModel.CategoryInfoViewModel

@{
    ViewData["Title"] = $"{Model.Category.Name} - Info";
}

<section class="container my-5">
    <div class="mb-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-light shadow fw-bold">
            ⬅️ Back to Home
        </a>
    </div>

    <h2 class="text-center fw-bold text-warning shadow-lg p-3 rounded-3 mb-4">
        @Model.Category.Name 🧩
    </h2>

    <p class="lead text-muted text-center mb-5" style="max-width: 800px; margin: 0 auto;">
        @Model.Category.Description
    </p>

    @if (Model.Products != null && Model.Products.Any())
    {
        <h3 class="fw-bold text-primary mb-4 text-center">Products in this Category</h3>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var product in Model.Products)
            {
                <div class="col">
                    <div class="card shadow-lg border-0 rounded-3 h-100">
                        <img src="@product.ImageUrl" alt="@product.Name" class="card-img-top rounded-top" style="height: 250px; object-fit: cover;">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="fw-bold">@product.Name</h5>
                            <p class="text-success fw-bold">@product.Price lv.</p>
                            <a href="@Url.Action("Details", "Product", new { id = product.Id })"
                               class="btn btn-outline-warning fw-bold shadow animate__animated animate__pulse animate__infinite">
                                View Product 👀
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-4">
            No products found in this category yet.
        </div>
    }
</section>
