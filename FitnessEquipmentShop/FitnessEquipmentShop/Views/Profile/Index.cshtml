@using FitnessEquipmentShop.Web.ViewModel

@model ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<!-- Hero header with gradient -->
<div class="py-5 text-center hero-gradient rounded-4">
    <div class="container">
        <h1 class="display-5 fw-bold">Welcome, @Model.FullName!</h1>
        <p class="lead">Manage your profile, update info, change password & more.</p>
    </div>
</div>

<!-- Profile container -->
<div class="container mt-5 mb-5 fade-in">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- Profile Card -->
            <div class="card glass-card p-4 position-relative">
                <div class="text-center mb-4">
                    @if (!string.IsNullOrEmpty(Model.CurrentPicturePath))
                    {
                        <img src="@Model.CurrentPicturePath" class="rounded-circle profile-pic" width="140" height="140" style="object-fit: cover;" />
                    }
                    else
                    {
                        <img src="/images/default-profile.png" class="rounded-circle profile-pic" width="140" height="140" />
                    }
                    <h3 class="mt-3 fw-semibold">@Model.FullName</h3>
                    <p class="text-muted">@Model.Email</p>
                </div>

                <!-- Edit Profile Button -->
                <div class="text-center">
                    <button class="btn btn-lg btn-outline-primary fw-semibold" type="button" data-bs-toggle="collapse" data-bs-target="#editProfileForm">
                        <i class="bi bi-gear-fill me-2"></i> Edit Profile
                    </button>
                </div>

                <!-- Edit Form -->
                <div class="collapse mt-4" id="editProfileForm">
                    <form asp-action="Update" method="post" enctype="multipart/form-data">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="FullName" class="form-label">Full Name</label>
                                <input asp-for="FullName" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" />
                            </div>
                            <div class="col-12">
                                <label asp-for="ProfilePicture" class="form-label">Change Profile Picture</label>
                                <input asp-for="ProfilePicture" type="file" class="form-control" />
                            </div>
                        </div>
                        <div class="text-end mt-4">
                            <button type="submit" class="btn btn-success btn-lg px-4">
                                💾 Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Change Password Card -->
            <div class="card glass-card mt-5 p-4">
                <div class="d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Change Password</h4>
                    <button class="btn btn-outline-warning" type="button" data-bs-toggle="collapse" data-bs-target="#changePasswordForm">
                        <i class="bi bi-lock-fill me-2"></i> Change Password
                    </button>
                </div>
                <div class="collapse mt-4" id="changePasswordForm">
                    <form asp-action="ChangePassword" method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="CurrentPassword" class="form-label">Current Password</label>
                                <input asp-for="CurrentPassword" class="form-control" type="password" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="NewPassword" class="form-label">New Password</label>
                                <input asp-for="NewPassword" class="form-control" type="password" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            </div>
                        </div>
                        <div class="text-end mt-4">
                            <button type="submit" class="btn btn-warning btn-lg px-4">
                                🔒 Update Password
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Extras Card -->
            <div class="card glass-card mt-5 p-4">
                <div class="card-body">
                    <h5 class="fw-bold">🔗 Quick Links</h5>
                    <ul class="list-group list-group-flush mt-3">
                        <li class="list-group-item">
                            <a asp-controller="Wishlist" asp-action="Index" class="text-decoration-none text-primary">
                                💖 My Wishlist
                            </a>
                        </li>
                        <li class="list-group-item">
                            <a asp-controller="Orders" asp-action="Index" class="text-decoration-none text-primary">
                                📦 Order History
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- BONUS STYLING -->
<style>

    .glass-card {
        background: rgba(255, 255, 255, 0.75);
        backdrop-filter: blur(12px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        border-radius: 1.25rem;
        border: 1px solid rgba(255, 255, 255, 0.25);
    }

    .collapse:not(.show) {
        display: block;
        height: 0;
        overflow: hidden;
        transition: height 0.4s ease;
    }

    .collapse.show {
        height: auto;
        transition: height 0.4s ease;
    }

    .btn-outline-primary:hover,
    .btn-outline-warning:hover {
        transform: scale(1.05);
        transition: all 0.2s ease-in-out;
    }

    .profile-pic {
        border: 4px solid white;
        box-shadow: 0 0 12px rgba(13, 110, 253, 0.5);
    }

    .hero-gradient {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
    }

    .fade-in {
        animation: fadeIn 0.8s ease-in;
    }

     fadeIn {
        0%

    {
        opacity: 0;
        transform: translateY(10px);
    }

    100% {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
